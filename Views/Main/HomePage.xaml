<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="yummyCook.Views.Main.HomePage">

    <ScrollView>
        <VerticalStackLayout Spacing="15">
            <Label Text="Dobré odpoledne"
                   StyleClass="PageH1" />
            <HorizontalStackLayout Spacing="5">
                <Label Text="13"
                       StyleClass="PageH1"
                       VerticalOptions="StartAndExpand" />
                <Label Text="položek na nákupní seznamu"
                       FontSize="Body"
                       VerticalOptions="End"
                       Margin="0,0,0,4" />
            </HorizontalStackLayout>
            <Button Text="Zobrazit seznam"
                    WidthRequest="150" />
            <Label Text="Právě trendy"
                   StyleClass="PageH2" />

            <!--Momentalne frame pro snazsi designovani, pote zmena na listview-->
            <Frame HeightRequest="200" Margin="5, 10">
                <Grid>
                    <Image Source="Images/pizza.jpg"
                           Aspect="AspectFill" />
                    <Grid>
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#00000000" Offset="0.25" />
                                <GradientStop Color="Black" Offset="1" />
                                <GradientStop Color="#99000000" Offset="0.7" />
                            </LinearGradientBrush>
                        </Grid.Background>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="1"
                               Grid.Column="0"
                               Text="Pizza"
                               FontSize="Title"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"
                               TextColor="White" 
                               Margin="10,0,0,0"/>
                        <Label Grid.Row="2"
                               Grid.Column="0"
                               Text="55 minut"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               TextColor="LightGray" />
                        <Label Grid.Row="3"
                               Grid.Column="1"
                               Text="7 surovin"
                               HorizontalTextAlignment="Center"
                               VerticalTextAlignment="Center"
                               TextColor="LightGray" />
                        <Button Grid.Row="2"
                                Grid.RowSpan="2"
                                Grid.Column="2"
                                CornerRadius="10"
                                Text="Do toho!"/>
                    </Grid>
                </Grid>
            </Frame>
            <ListView x:Name="recipesList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Label Text="{Binding Name}" />
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="AAAAAAAAA" />

                <CollectionView x:Name="IngCollection">
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Horizontal"  />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Button Text="{Binding Name}"
                                    Margin="5" />
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>